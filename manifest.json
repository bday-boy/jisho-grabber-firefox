{
    "manifest_version": 2,
    "name": "Jisho Grabber",
    "version": "1.0",
    "description": "Add a context menu option to highlighted text to highlighted text to search it on Jisho and get ",

    "icons": {
        "48": "icons/jisho-grabber.svg",
        "96": "icons/jisho-grabber.svg"
    },

    "permissions": [
        "<all_urls>",
        "contextMenus",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "dns"
    ],

    "background": {
        "scripts": [
            "src/search-selection.js"
        ]
    },

    "browser_action": {
        "default_icon": "icons/jisho-grabber.svg",
        "default_title": "Jisho Grabber",
        "default_popup": "popup/popup.html"
    },

    "content_scripts": [
        {
            "matches": [
                "https://jisho.org/search/*"
            ],
            "js": [
                "src/japanese-util.js",
                "src/anki-util.js",
                "src/anki-connector.js",
                "src/anki.js",
                "src/database.js",
                "src/anki-database.js",
                "src/word-parser.js",
                "src/meaning-selector.js",
                "src/element-picker.js"
            ]
        }
    ]
}
