{
    "manifest_version": 2,
    "name": "Jisho Grabber",
    "version": "1.0",
    "description": "Add a context menu option to highlighted text to highlighted text to search it on Jisho and get ",

    "icons": {
        "48": "icons/extension-icon.svg",
        "96": "icons/extension-icon.svg"
    },

    "background": {
        "scripts": [
            "src/search-selection.js",
            "src/jisho-search-selector.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["https://jisho.org/search/*"],
            "js": [
                "src/jisho-page-selector.js",
                "src/element-picker.js"
            ]
        }
    ],

    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}
